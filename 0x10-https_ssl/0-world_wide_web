#!/usr/bin/env bash
# display info domain

print_domaine () {
    dig "$1" | grep -A1 'ANSWER SECTION:' | sed -r "s/$1./$2/g" | awk -F" " ' NR==2 { print "The subdomain " $1 " is a " $4 " record and points to " $5 }'
}

if [ "$#" -eq 2 ]
then
    print_domaine "$2.$1" "$2"
else
    print_domaine "www.$1" "www"
    print_domaine "lb-01.$1" "lb-01"
    print_domaine "web-01.$1" "web-01"
    print_domaine "web-02.$1" "web-02"
fi
