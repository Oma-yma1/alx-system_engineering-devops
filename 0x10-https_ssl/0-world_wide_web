#!/usr/bin/env bash
# configure domain zone , display information domain

func_domai() {
    local domain="$1"
    local subdomain="$2"
    
    # use default subdomains
    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    for sub in "${subdomains[@]}"; do
        # Use 'dig' to functio, domain information for the subdomain
        result=$(dig "$sub.$domain" | awk '/ANSWER SECTION:/ {getline; print}')
        if [ -n "$result" ]; then
            # find the record type and destination from the dig result
            record_type=$(echo "$result" | awk '{print $4}')
            destination=$(echo "$result" | awk '{print $5}')
            echo "The subdomain $sub is a $record_type record and points to $destination"
        else
            echo "No DNS record found for subdomain $sub"
        fi
    done
}

# Chec script is called with the correct number of args
if [ "$#" -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

# domain and subdomain arguments
domain="$1"
subdomain="$2"

# Call thefunc_domai function with the provided arguments
func_domai "$domain" "$subdomain"

