#!/usr/bin/env bash
# configure domain zone and display information about subdomain

print_domain () {
    answ=$(dig "$2"."$1" | grep -A1 'ANSWER SECTION:' | tr '\t' '\n' | tail -2 | tr '\n' ' ')
    subdomain="$2"
    record_typ=$(echo "$answ" | awk '{print $2}')
    dest=$(echo "$answ" | awk '{print $3}')
    echo "The subdomain $subdomain is a $record_typ record and points to $dest"
}

if [ "$#" == 1 ]
then
  print_domain "$1" "www"
  print_domain "$1" "lb-01"
  print_domain "$1" "web-01"
  print_domain "$1" "web-02"
elif [ "$#" == 2 ]
then
  print_domain "$1" "$2"
fi
